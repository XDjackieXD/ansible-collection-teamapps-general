# nginx reverse proxy based on evertramos github repository:
# https://github.com/evertramos/docker-compose-letsencrypt-nginx-proxy-companion

version: '3.7'

x-logging1:
  &json-file
  driver: json-file
  options:
    max-size: ${LOG_MAX_SIZE:-2m}
    max-file: ${LOG_MAX_FILE:-10}
    mode: non-blocking

x-logging2:
  &loki
  driver: loki
  ##  requires loki driver plugin:
  # docker plugin install grafana/loki-docker-driver:latest --alias loki --grant-all-permissions
  # docker plugin enable loki:latest
  options:
    loki-url: "https://{{ webproxy_loki_user }}:{{ webproxy_loki_password }}@{{ webproxy_loki_server }}/loki/api/v1/push"
    loki-retries: '10'
    loki-batch-size: '102400'
    loki-external-labels: 'container_name={{ "{{.Name}}" }},category=dockerlogs'
    max-size: ${LOG_MAX_SIZE:-2m}
    max-file: ${LOG_MAX_FILE:-10}
    mode: non-blocking
    max-buffer-size: 10m

services:
  nginx-web:
    image: nginx:alpine
    labels:
      com.github.jrcs.letsencrypt_nginx_proxy_companion.nginx_proxy: "true"
    container_name: ${NGINX_WEB:-nginx-web}
    restart: always
    ports:
      - "${IP:-0.0.0.0}:80:80"
      - "${IP:-0.0.0.0}:443:443"
    volumes:
      - ./data/conf.d:/etc/nginx/conf.d
      - ./data/vhost.d:/etc/nginx/vhost.d
      - ./data/html:/usr/share/nginx/html
      - ./data/certs:/etc/nginx/certs:ro
      - ./data/htpasswd:/etc/nginx/htpasswd:ro
      - ./data/nginx.conf:/etc/nginx/nginx.conf
    sysctls:
      net.core.somaxconn: 65536
    logging: *{{ webproxy_log_driver }}

  nginx-gen:
    image: joellinn/docker-gen
    command: -notify-sighup ${NGINX_WEB:-nginx-web} -watch -wait 5s:30s /etc/docker-gen/templates/nginx.tmpl /etc/nginx/conf.d/default.conf
    container_name: ${DOCKER_GEN:-nginx-gen}
    restart: always
    environment:
      DEFAULT_HOST: ${DEFAULT_HOST:-}
    volumes:
      - ./data/conf.d:/etc/nginx/conf.d
      - ./data/vhost.d:/etc/nginx/vhost.d
      - ./data/html:/usr/share/nginx/html
      - ./data/certs:/etc/nginx/certs:ro
      - ./data/htpasswd:/etc/nginx/htpasswd:ro
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - ./nginx.tmpl:/etc/docker-gen/templates/nginx.tmpl:ro
    logging: *{{ webproxy_log_driver }}
    depends_on:
      - nginx-web

  nginx-letsencrypt:
    image: jrcs/letsencrypt-nginx-proxy-companion:{{ webproxy_letsencrypt_companion_tag }}
    container_name: ${LETS_ENCRYPT:-nginx-letsencrypt}
    restart: always
    volumes:
      - ./data/conf.d:/etc/nginx/conf.d
      - ./data/vhost.d:/etc/nginx/vhost.d
      - ./data/html:/usr/share/nginx/html
      - ./data/certs:/etc/nginx/certs:rw
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./data/acme.sh:/etc/acme.sh:rw
    environment:
      NGINX_DOCKER_GEN_CONTAINER: ${DOCKER_GEN:-nginx-gen}
      NGINX_PROXY_CONTAINER: ${NGINX_WEB:-nginx-web}
    logging: *{{ webproxy_log_driver }}
    depends_on:
      - nginx-gen
      - nginx-web

networks:
  default:
    external:
      name: ${NETWORK:-webproxy}
