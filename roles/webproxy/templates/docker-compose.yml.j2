# nginx reverse proxy based on evertramos github repository:
# https://github.com/evertramos/docker-compose-letsencrypt-nginx-proxy-companion

version: '3.7'

x-logging1:
  &json-file
  driver: json-file
  options:
    max-size: "4m"
    max-file: "10"
    mode: non-blocking

x-logging2:
  &loki
  driver: loki
  ##  requires loki driver plugin:
  # docker plugin install grafana/loki-docker-driver:latest --alias loki --grant-all-permissions
  # docker plugin enable loki:latest
  options:
    loki-url: "https://{{ webproxy_loki_user }}:{{ webproxy_loki_password }}@{{ webproxy_loki_server }}/loki/api/v1/push"
    loki-retries: '10'
    loki-batch-size: '102400'
    loki-external-labels: 'container_name={{ "{{.Name}}" }},category=dockerlogs'
    max-size: "4m"
    max-file: "10"
    mode: non-blocking
    max-buffer-size: 10m

services:
  nginx:
    image: {{ webproxy_nginx_image }}
    labels:
      com.github.jrcs.letsencrypt_nginx_proxy_companion.nginx_proxy: "true"
    container_name: webproxy_nginx
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./data/conf.d:/etc/nginx/conf.d
      - ./data/vhost.d:/etc/nginx/vhost.d
      - ./data/html:/usr/share/nginx/html
      - ./data/certs:/etc/nginx/certs:ro
      - ./data/htpasswd:/etc/nginx/htpasswd:ro
      - ./data/nginx.conf:/etc/nginx/nginx.conf
    sysctls:
      net.core.somaxconn: 65536
    logging: *{{ webproxy_log_driver }}

  docker-gen:
    image: '{{ webproxy_dockergen_image }}'
    command: -notify-sighup webproxy_nginx -watch -wait 5s:30s /etc/docker-gen/templates/nginx.tmpl /etc/nginx/conf.d/default.conf
    container_name: webproxy_docker-gen
    restart: always
    environment:
      DEFAULT_HOST: "{{ webproxy_default_host }}"
      ENABLE_IPV6: "true"
      RESOLVER: "127.0.0.11"
    volumes:
      - ./data/conf.d:/etc/nginx/conf.d
      - ./data/vhost.d:/etc/nginx/vhost.d
      - ./data/html:/usr/share/nginx/html
      - ./data/certs:/etc/nginx/certs:ro
      - ./data/htpasswd:/etc/nginx/htpasswd:ro
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - ./nginx.tmpl:/etc/docker-gen/templates/nginx.tmpl:ro
    logging: *{{ webproxy_log_driver }}
    labels:
      - "com.github.jrcs.letsencrypt_nginx_proxy_companion.docker_gen"
    depends_on:
      - nginx

  letsencrypt:
    image: {{ webproxy_letsencrypt_image }}
    container_name: webproxy_letsencrypt
    restart: always
    volumes:
      - ./data/conf.d:/etc/nginx/conf.d
      - ./data/vhost.d:/etc/nginx/vhost.d
      - ./data/html:/usr/share/nginx/html
      - ./data/certs:/etc/nginx/certs:rw
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./data/acme.sh:/etc/acme.sh:rw
    environment:
      NGINX_DOCKER_GEN_CONTAINER: webproxy_docker-gen
      NGINX_PROXY_CONTAINER: webproxy_nginx
      DEFAULT_EMAIL: {{ webproxy_letsencrypt_default_email }}
    logging: *{{ webproxy_log_driver }}
    depends_on:
      - docker-gen
      - nginx

networks:
  default:
    external:
      name: webproxy
